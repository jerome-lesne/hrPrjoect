<div class="companyForm">
    <form action="/company" method="post">
        <div>
            
            <h2>Company Registration</h2>
        </div>
        <div>
            <label for="Name">Company Name</label>
            <input type="text" name="name" id="companyName" value="">
            {% if error %}
                <p>{{error.errors.name}}</p>
            {% endif %}
        </div>
        <div>
            <label for="siret">Siret</label>
            <input type="number" name="siret" id="companySiret" value="">
            {% if error %}
                <p>{{error.errors.siret}}</p>
            {% endif %}
        </div>
        <div>
            <label for="ceo">CEO Name</label>
            <input type="text" name="ceo" id="companyCEO" value="">
            {% if error %}
                <p>{{error.errors.ceo}}</p>
            {% endif %}
        </div>
        <div>
            <label for="email">Email</label>
            <input type="email" name="mail" id="companyMail" value="">
            {% if error %}
                <p>{{error.errors.mail}}</p>
            {% endif %}
        </div>
        <div>
            <label for="password">Password</label>
            <input type="password" name="password" value="">
            {% if error %}
                <p>{{error.errors.password}}</p>
            {% endif %}
        </div>
        <div>
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" name="confirmPassword" value="">
            {% if error %}
                <p>{{error.confirmPassword}}</p>
            {% endif %}
        </div>
        <div>
            <input id="submitBtn" type="submit" value="Submit" />
        </div>
    </form>
</div>
