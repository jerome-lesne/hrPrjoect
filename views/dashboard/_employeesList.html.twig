<div id="employeesContainer">
    {% for employee in company.employees %}
    <div id="employee">
        <div id="employeePic">
            <img src="{{employee.image}}" alt="Employee Picture">
        </div>
        <div id="employeeInfo">
            <div>
                <h3>Name</h3>
                <p>{{employee.name}}</p>
            </div>
            <div>
                <h3>Role</h3>
                <p>{{employee.role}}</p>
            </div>
            <div>
                <h3>Blames</h3>
                <p>{{employee.blames}}</p>
            </div>
            <div id="employeeActions">
                <h3>Actions</h3>
                <div>
                    <a href="#"><img src="/assets/images/edit.png" alt=""></a>
                    <a href="/blame/{{employee._id}}"><img src="/assets/images/blame.png" alt=""></a>
                    <a href="/delete-employee/{{employee._id}}"><img src="/assets/images/delete.png" alt=""></a>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
